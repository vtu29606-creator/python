        "import numpy as np\n",
        "\n",
        "def simulate_coin_flips(n):\n",
        "    \"\"\"\n",
        "    Simulate n random coin flips using NumPy.\n",
        "    Returns a list of 'Heads' or 'Tails'.\n",
        "    \"\"\"\n",
        "    outcomes = np.random.choice(['Heads', 'Tails'], size=n)\n",
        "    return outcomes\n",
        "\n",
        "def simulate_dice_rolls(n):\n",
        "    \"\"\"\n",
        "    Simulate n random dice rolls using NumPy.\n",
        "    Returns a list of integers between 1 and 6.\n",
        "    \"\"\"\n",
        "    outcomes = np.random.randint(1, 7, size=n)\n",
        "    return outcomes\n",
        "\n",
        "def main():\n",
        "    print(\"ðŸŽ² Welcome to Random Simulation App ðŸŽ²\")\n",
        "    print(\"1. Simulate Coin Flips\")\n",
        "    print(\"2. Simulate Dice Rolls\")\n",
        "    choice = input(\"Enter your choice (1 or 2): \")\n",
        "\n",
        "    try:\n",
        "        n = int(input(\"Enter number of simulations: \"))\n",
        "    except ValueError:\n",
        "        print(\"Invalid input! Please enter an integer.\")\n",
        "        return\n",
        "\n",
        "    if choice == '1':\n",
        "        results = simulate_coin_flips(n)\n",
        "        print(\"\\nðŸª™ Coin Flip Results:\")\n",
        "        print(results)\n",
        "        print(f\"Heads: {np.count_nonzero(results == 'Heads')}, Tails: {np.count_nonzero(results == 'Tails')}\")\n",
        "\n",
        "    elif choice == '2':\n",
        "        results = simulate_dice_rolls(n)\n",
        "        print(\"\\nðŸŽ¯ Dice Roll Results:\")\n",
        "        print(results)\n",
        "        for i in range(1, 7):\n",
        "            print(f\"Face {i}: {np.count_nonzero(results == i)} times\")\n",
        "\n",
        "    else:\n",
        "        print(\"Invalid choice! Please select 1 or 2.\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()\n"
      ]
